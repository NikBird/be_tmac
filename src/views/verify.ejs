<%- include('./common/header') %>
    <form action="/logout" method="post">
        <button type="submit" class="btn btn-primary btn-xs pull-right">Logout </button>
        <p>check text</p>
    </form>
    <div class="container">
        <div>
            <form action="/verify" method="post">
                <label for="fname">Username</label>
                <input type="text" id="fname" name="username" placeholder="Your name..">
                <input type="submit" value="Search">
            </form>
        </div>
        <% if(data!=false) { %>
            <form action="/editUser/<%= username %>" method="post">

                <label>Username : <%= username %></label><br>
                <label>Status : <% if(status==true) { %> Verified <% } else {%> Denied <% } %> </label><br>
                <label for="fname">Change status to </label>
                <select id="country" name="status">
                    <% if(status!=true) { %>
                        <option value="true">verified</option>
                        <% } %>

                            <% if(status!=false) { %>
                                <option value="false">denied</option>
                                <% } %>
                </select><br>
                <input type="submit" value="Update">
            </form>
            <form action="/deleteUser/<%= username %>" id="dUser" method="post">
                <button type="button" onclick="checker()">delete</button>
            </form>
            <% } else if(add==true){ %>
                <label>There is no user with this username , want you add <b>
                        <%= username %>
                    </b> it to db ? </label><br>
                <div>
                    <form action="/addUser/<%= username %>" method="post">
                        <label for="fname">Status</label><br>
                        <select id="country" name="status">
                            <option value="true">verified</option>
                            <option value="false">denied</option>
                        </select><br>
                        <input type="submit" value="Add">
                    </form>
                </div>
                <% } %>
                    <div class="row col-md-6 col-md-offset-2 custyle">
                        <%if (verified.length !=0){ %>
                            <h1>Verifed Users</h1>
                            <table class="table table-striped custab">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>requestedBy</th>
                                        <th>requested By Id ID</th>
                                        <th>status Updated By</th>
                                        <th>status Updated By Id</th>
                                        <th>status Updated Time </th>
                                        <th>status</th>
                                    </tr>
                                </thead>
                                <% verified.forEach(function(row){ %>
                                    <tr>
                                        <td>
                                            <%= row.username %>
                                        </td>
                                        <td>
                                            <%= row.requestedBy %>
                                        </td>
                                        <td>
                                            <%= row.requestedById %>
                                        </td>
                                        <td>
                                            <%= row.statusUpdateBy %>
                                        </td>
                                        <td>
                                            <%= row.statusUpdateById %>
                                        </td>
                                        <td>
                                            <%= row.statusUpdateTime %>
                                        </td>
                                        <td>
                                            <% if(row.status==true) { %> Verified <% } else {%> Denied <% } %>
                                        </td>
                                        <% })} %>
                                    </tr>
                            </table>
                    </div>
                    <div class="row col-md-6 col-md-offset-2 custyle">
                        <%if (denied.length !=0){ %>
                            <h1>Denied Users</h1>
                            <table class="table table-striped custab">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>requestedBy</th>
                                        <th>requested By Id ID</th>
                                        <th>status Updated By</th>
                                        <th>status Updated By Id</th>
                                        <th>status Updated Time </th>
                                        <th>status</th>
                                    </tr>
                                </thead>
                                <% denied.forEach(function(row){ %>
                                    <tr>
                                        <td>
                                            <%= row.username %>
                                        </td>
                                        <td>
                                            <%= row.requestedBy %>
                                        </td>
                                        <td>
                                            <%= row.requestedById %>
                                        </td>
                                        <td>
                                            <%= row.statusUpdateBy %>
                                        </td>
                                        <td>
                                            <%= row.statusUpdateById %>
                                        </td>
                                        <td>
                                            <%= row.statusUpdateTime %>
                                        </td>
                                        <td>
                                            <% if(row.status==true) { %> Verified <% } else {%> Denied <% } %>
                                        </td>
                                        <% })} %>
                                    </tr>
                            </table>
                    </div>
    </div>
    <script>
        function checker() {
            if (window.confirm("Are you sure")) {
                document.getElementById("dUser").submit();
            } else {
                return;
            }
        }
    </script>
    <%- include('./common/footer') %>